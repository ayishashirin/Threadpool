    <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #4e657a;

    }
    h1 {
      text-align: center;
      margin-top: 30px;
      color: #fff; /* Dark gray */
    }
    table {
      width: 80%;
      margin: 20px auto;
      border-collapse: collapse;
      background-color: #4e657a;

      box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }
    th, td {
      padding: 12px 15px;
      text-align: left;
      color:white;
    }
    th {
      background-color: #fff;
 /* Blue */
      color: #333;
    }
    tr:nth-child(even) {
      background-color: #4e657a;
    }
    tr:hover {
      background-color: black;
    }
    a {
      text-decoration: none;
      color: #ddd;
 /* Blue */
    }
    a:hover {
      text-decoration: underline;
    } 
    button.blockToggle {
      padding: 8px 12px;
      cursor: pointer;
      border: none;
      border-radius: 4px;
      width: 100px; /* Set a fixed width */
      display: inline-block; /* Ensure inline display */
    }

    button.blockToggle[data-state="blocked"] {
      background-color: #dc3545; /* Red */
      color: #fff;
    }

    button.blockToggle[data-state="unblocked"] {
      background-color: #28a745; /* Green */
      color: #fff;
    }

    button.blockToggle:hover {
      opacity: 0.9;
    }

    .action-buttons {
      text-align: right;
      margin-top: 20px;
    }

    .back-to-category-form {
      position: absolute;
      top: 0;
      right: 0;
      margin: 20px;
    }
  </style>

</head>
<body>
  <div id="userdetails">
    <h1>User Management System</h1>
    
    <table border="1">
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Mobile</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.mobile %></td>
            <td>
              <a href="/blockUser?id=<%=user._id%>">
                <% if(user.block){ %>
                  <button type="button" user_id="<%= user._id  %>" class="blockToggle" data-state="unblocked">Unblock</button>
                <% } else { %>
                  <button type="button" user_id="<%= user._id  %>" class="blockToggle" data-state="blocked">Block</button>
                  <% } %>
              </a>
                </td>
          </tr>
          <p id="ID" style="display: none;" class="d-none"><%= user._id %></p>

        <% }); %>
      </tbody>
    </table>
  </div>
